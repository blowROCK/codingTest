/**
 * https://leetcode.com/problems/count-negative-numbers-in-a-sorted-matrix
 * @param {number[][]} grid
 * @return {number}
 */
var countNegatives = function(grid) {
    let row = grid.length - 1; // --
    let col = 0; // ++

    const n = grid[0].length;

    let count = 0;

    while(row >= 0 && col < n){
        if(grid[row][col] < 0) {
            count += (n - col)
            row--;
        } else {
            col++;
        }
    }
    return count;
};


// [[4,3,2,-1],
//  [3,2,1,-1],
//  [1,1,-1,-2],
//  [-1,-1,-2,-3]]
